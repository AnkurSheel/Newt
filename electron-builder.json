{
    "extends": null,
    "productName": "Newt",
    "appId": "com.ankursheel.Newt",
    "directories": {
        "output": "build",
        "buildResources": "assets"
    },
    "files": ["./dist/**/*"],
    "extraFiles": "migrations/*",
    "dmg": {
        "contents": [
            {
                "x": 130,
                "y": 220
            },
            {
                "x": 410,
                "y": 220,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "win": {
        "target": ["zip", "dir", "nsis"],
        "publish": ["github"],
        "icon": "assets/icon.ico"
    },
    "linux": {
        "target": ["AppImage", "deb"]
    }
}
