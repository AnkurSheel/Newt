{
    "extends": null,
    "productName": "Newt",
    "appId": "com.ankursheel.Newt",
    "directories": {
        "output": "build",
        "buildResources": "assets"
    },
    "files": ["./dist/**/*"],
    "extraFiles": "migrations/*",
    "artifactName": "${productName}-${os}.${ext}",
    "mac": {
        "target": ["zip", "dmg"],
        "icon": "assets/icon.png"
    },
    "win": {
        "target": ["zip", "nsis"],
        "icon": "assets/icon.png"
    },
    "linux": {
        "target": ["zip", "AppImage"],
        "icon": "assets/icon.png"
    }
}
