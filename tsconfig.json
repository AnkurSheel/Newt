{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es2017",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": ["es6", "dom", "es2017.object"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
